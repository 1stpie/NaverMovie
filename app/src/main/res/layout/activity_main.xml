<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="model"
                type="com.tistory.black_jin0427.navermovie.viewModel.movieList.MovieListViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.MainActivity">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_activity_main"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:contentInsetStart="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.SearchView
                    android:id="@+id/sv_activity_main"
                    android:query="@{model.searchQuery}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </androidx.appcompat.widget.SearchView>

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_activity_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:bind_adapter="@{model.adapter}"
                app:bind_items="@{model.items}"
                app:layout_constraintTop_toBottomOf="@+id/tb_activity_main"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{model.progressView}"
                app:layout_constraintTop_toTopOf="@+id/rv_activity_main"
                app:layout_constraintBottom_toBottomOf="@+id/rv_activity_main"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tv_activity_main_empty_data"
                android:text="데이터가 없습니다"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{model.emptyDataView}"
                app:layout_constraintTop_toTopOf="@+id/rv_activity_main"
                app:layout_constraintBottom_toBottomOf="@+id/rv_activity_main"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
